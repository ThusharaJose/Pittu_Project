@model ContatDetails.Contact

@{
    Layout = "~/Views/Shared/_Layout.Mobile.cshtml";
    ViewBag.Title = "Details";
}

@section Header{
    <div data-role="button" data-icon="arrow-l" data-rel="back" class="ui-btn-left">
        @Html.ActionLink("Back", "Index")
    </div>
}

<ul data-role="listview" data-inset="true">
    <li data-role="list-divider">
        <h2>@Model.Name</h2>
    </li>
    <li>
        <div style="padding: 3px">Name: @Model.Name</div>
        <div style="padding: 3px">Address: @Model.Address</div>
        <div style="padding: 3px">Email: @Model.Email</div>
        <div style="padding: 3px">Phone: @Model.Phone</div>
       
    </li>
</ul>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
